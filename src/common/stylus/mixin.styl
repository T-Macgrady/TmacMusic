// 背景图片
bg-image($url)
  background-image: url($url + "@2x.png")
  @media (-webkit-min-device-pixel-ratio: 3),(min-device-pixel-ratio: 3)
    background-image: url($url + "@3x.png")

// 不换行
no-wrap()
  text-overflow: ellipsis
  overflow: hidden
  white-space: nowrap

// 扩展点击区域
extend-click()
  position: relative
  &:before
    content: ''
    position: absolute
    top: -10px
    left: -10px
    right: -10px
    bottom: -10px

// 添加皮肤样式
extend-styles($prop, $variable, arg...)
  &.black
    {$prop}: arg $variable[0]
  &.red
    {$prop}: arg $variable[1]
  &.blue
    {$prop}: arg $variable[2]
  &.green
    {$prop}: arg $variable[3]